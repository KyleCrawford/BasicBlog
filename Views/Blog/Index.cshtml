@using Microsoft.AspNet.Identity
@model BlogMe.ViewModels.ViewAllBlogsViewModel
@{
    ViewBag.Title = "Blogs";
}

@if (@User.Identity.IsAuthenticated)
{
    <p>We are authenticated</p>
}
else 
{
    <p>We are not authd</p>
}

<h2>Blogs</h2>
<div>
    <p>I want to put new blog button here (only if logged in)</p>
    <p>@User.Identity.GetUserId() </p>
</div>
<ul>
    

    @for (int i = 0; i < Model.BlogList.Count(); i++)
    {
        <li>
            @Model.BlogList[i].Title
        </li>
    }
</ul>
<p>@Model.BlogList.Count()</p>
